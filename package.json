{
    "name": "app",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "prestart": "npm install",
        "dev": "npm run serve",
        "start": "npm run serve",
        "deploy": "cloudbase framework:deploy",
        "deploy:client": "cloudbase framework:deploy client",
        "deploy:server": "cloudbase framework:deploy server",
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "core-js": "^3.6.5",
        "dayjs": "^1.8.33",
        "html-webpack-plugin": "latest",
        "loaders.css": "^0.1.2",
        "moment": "^2.29.0",
        "qs": "latest",
        "swiper": "^4.5.0",
        "vant": "^2.10.6",
        "vue": "^2.6.11",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1",
        "vux": "^2.9.2",
        "weixin-js-sdk": "^1.6.0"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "~4.5.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-service": "~4.5.0",
        "@vue/eslint-config-standard": "^3.0.0",
        "@cloudbase/node-sdk": "^2.3.4",
        "@cloudbase/vue-provider": "^0.3.0",
        "autoprefixer": "^7.1.2",
        "babel-eslint": "^10.1.0",
        "babel-plugin-import": "^1.13.0",
        "eslint": "^6.7.2",
        "eslint-plugin-vue": "^6.2.2",
        "less": "^3.0.4",
        "less-loader": "^4.1.0",
        "node-sass": "^4.14.1",
        "postcss-pxtorem": "^5.1.1",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.2",
        "script-ext-html-webpack-plugin": "^2.1.4",
        "vue-template-compiler": "^2.6.11",
        "webpack-cdn-plugin": "^3.3.1"
    },
    "lint-staged": {
        "*.js": [
            "vue-cli-service lint",
            "git add"
        ],
        "*.vue": [
            "vue-cli-service lint",
            "git add"
        ]
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true,
            "es6": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/standard"
        ],
        "rules": {
            "semi": [
                0
            ],
            "indent": "off",
            "linebreak-style": "error",
            "vue/script-indent": [
                "error",
                4,
                {
                    "baseIndent": 1
                }
            ],
            "no-console": "off",
            "no-debugger": "off",
            "vue/no-parsing-error": [
                2,
                {
                    "x-invalid-end-tag": false
                }
            ],
            "object-property-newline": 0
        },
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "globals": {
            "BMap": false
        }
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "Android 2.3",
        "Android >= 4",
        "Chrome >= 20",
        "Firefox >= 19",
        "Explorer >= 8",
        "iOS >= 6",
        "Opera >= 12",
        "Safari >= 6"
    ]
}
